<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:text="Jobbigt"
            android:fontFamily="sans-serif-condensed"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#479"
            android:textSize="12sp"
            android:textAlignment="center"
            android:text="Din samlingsplats för nyheter på arbetsplatsen"
            android:layout_marginBottom="100sp"
            />
        <EditText
            android:id="@+id/usernameEditText"
            android:textAlignment="center"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:background="#fff"
            android:hint="användarnamn"
            />
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_marginVertical="25sp"
            android:textAlignment="center"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:background="#fff"
            android:hint="lösenord"
            android:inputType="textPassword"
            />
        <Button
            android:id="@+id/loginButton"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:text="Logga in"
            />
    </LinearLayout>
</FrameLayout>